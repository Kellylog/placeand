<!DOCTYPE html>
<html>
<head>
  <title>Placeand</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<div id="wrap">
  <nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Place and Plan', root_path, class: 'navbar-brand' %>
    </div>

<!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">          
    <ul class="nav navbar-nav navbar-right">   
      <li><%= link_to 'Add a Place', new_place_path %></li>  
      
      <% if user_signed_in? %>
      <li><%= link_to 'My Profile', user_path(current_user) %></li>
        <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
      <% else %>

      <!-- Log in modal -->
        
      <li><%= link_to 'Log in', new_user_session_path %></li>
      

      <!-- Sign up modal -->
        <li><%= link_to 'Sign up', new_user_registration_path %></li>  

      <% end %>              
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


 

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>
</div>

<br class="clr" />




<!-- footer -->
<div id="footer">
  <div class="container">

    

      <div class="col-xs-12 col-sm-4 about">
        <b>About</b>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
        <br />
        <%= link_to 'Copyright Policy', copyright_path %>
        <br />
        <%= link_to 'Website Disclaimer', disclaimer_path %>
        <br />
        <%= link_to 'Terms of Service', terms_path %>
        <br />
      </div>

      <div class="col-xs-12 col-sm-4 social">
        <b>Social</b>
        <br />          
        <%= link_to 'https://www.facebook.com' do %>
        <%= image_tag 'facebook.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://www.instagram.com' do %>
        <%= image_tag 'instagram.png', class: 'social-button' %>
        <% end %>
      </div>

      <div class="col-xs-12 col-sm-4">
        <b>Contact</b>
        <br />
        placeandplan@gmail.com
        <br />
        South Korea
      </div>
    </div>
</div>

</body>
</html>
