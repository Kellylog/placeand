
<div class="text-center">
   <h1><%= @user.email %></h1>
    <h4>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %> </h4>
 </div>
<div class="clear"></div>




<hr />





<!-- Places Display -->
<h1 class="text-center">My Places</h1><br />
<div class="userbox col-xs-10 col-xs-offset-1 text-left">
<% @user.places.each do |place| %>     
      <h3><%= link_to place.name, place_path(place) %></h3><br />
      <i><%= place.address %></i><br />
      <p><%= place.description %></p><br />    
<% end %>
</div>
<div class="clear"></div>




<hr />



<!-- Comments Display -->
<h1 class="text-center">My Reviews</h1>
<br />

<div class="col-xs-10 col-xs-offset-1 text-left">
<blockquote>
<% @user.comments.each do |comment| %>
<%= link_to comment.place.name, place_path(comment.place) %>: <%= comment.review %><br />
<% end %>
</blockquote><br />
</div>



<div class="clear"></div>