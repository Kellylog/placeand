
<div class="text-center">
   <h1><%= @user.email %></h1>
    <h4>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %> </h4>
 </div>
<div class="clear"></div>




<hr />





<!-- Places Display -->
<h1 class="text-center">My Places</h1><br />

<% @user.places.each do |place| %>     
<div class="userbox col-xs-5 text-left">
      <h3><%= link_to place.name, place_path(place) %></h3><br />
      <i><%= place.description %></i><br />
      <p><%= place.address %></p><br />
</div>   
	  <% end %>

<div class="clear"></div>




<hr />



<!-- Comments Display -->
<h1 class="text-center">My Reviews</h1>
<br />


<% @user.comments.each do |comment| %>
<div class="col-xs-10 col-xs-offset-1 text-left">
<blockquote>
<%= link_to comment.place.name, place_path(comment.place) %>: <%= comment.review %>
</blockquote>
</div>
<% end %>




<div class="clear"></div>