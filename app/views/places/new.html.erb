<h2>Enter Your Place Details</h2>

<%= simple_form_for @place do |f| %>
  <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose one"} %><br />


  <%= f.input :name %>
  <br />
  <%= f.input :address %> 
  <br />   
  <%= f.input :description %>
  <br />
  <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
